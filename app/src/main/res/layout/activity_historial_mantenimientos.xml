<!-- item_mantenimiento.xml -->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="335dp"
        android:layout_height="134dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <!-- ImageView para mostrar la imagen del mantenimiento -->

        <!-- TextView para mostrar el título del mantenimiento -->
        <ImageView
            android:id="@+id/idIVMaintenanceImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:src="@drawable/imagen_del_mantenimiento" />

        <TextView
            android:id="@+id/idTVMaintenanceTitle"
            android:layout_width="212dp"
            android:layout_height="49dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/idIVMaintenanceImage"
            android:text="Registro mantenimiento 8721"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- TextView para mostrar la descripción del mantenimiento -->
        <TextView
            android:id="@+id/idTVMaintenanceDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVMaintenanceTitle"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/idIVMaintenanceImage"
            android:text="maintenance_description" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
